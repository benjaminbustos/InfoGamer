<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:paddingHorizontal="50dp"
    android:paddingTop="150dp"
    android:paddingBottom="30dp"
    android:background="#ffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/logo2"
        android:id="@+id/logo"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_user"
        android:layout_below="@id/logo"
        android:inputType="text"
        android:hint="Enter your user"
        android:layout_marginVertical="20dp"
        />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_user"
        android:hint="Enter your pass"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:layout_below="@id/login_pass"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:onClick="bt_login"
        android:textColor="#ffff"
        android:background="@drawable/button_rounded"
        android:elevation="16dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_about"
        android:text="About us"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="bt_aboutUs"
        android:textColor="#E91E1E"
        />

</RelativeLayout>

